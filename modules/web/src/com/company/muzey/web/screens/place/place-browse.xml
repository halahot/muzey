<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="placesTable"
        messagesPack="com.company.muzey.web.screens.place">
    <data readOnly="true">
        <collection id="placesDc"
                    class="com.company.muzey.entity.Place"
                    view="_local">
            <loader id="placesDl">
                <query>
                    <![CDATA[select e from muzey_Place e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="placesTable"
            spacing="true">
        <filter id="filter"
                applyTo="placesTable"
                dataLoader="placesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="placesTable"
                    width="100%"
                    dataContainer="placesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="title"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="placesTable.create"/>
                <button id="editBtn" action="placesTable.edit"/>
                <button id="removeBtn" action="placesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
